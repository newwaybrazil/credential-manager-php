{
    "name": "espositovitor/credential-manager-php",
    "description": "PHP library for search credential in redis with Predis",
    "type": "library",
    "require": {
        "php": "7.1",
        "predis/predis": "1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "7.5",
        "mockery/mockery": "1.3",
        "squizlabs/php_codesniffer": "3.5"
    },
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "New Way Brazil",
            "email": "contato@gruponewway.com.br"
        }
    ],
    "autoload": {
        "psr-4": {
            "CredentialManager\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "bash contrib/setup.sh"
        ],
        "check": [
            "@lint",
            "@cs",
            "@test"
        ],
        "lint": [
            "find ./src -name '*.php' -print0 | xargs -0 -n1 -P8 php -l -d display_errors=0"
        ],
        "cs": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit",
        "test-cover": "vendor/bin/phpunit --coverage-html coverage --coverage-clover coverage/coverage.xml --log-junit junit.xml"
    }
}
